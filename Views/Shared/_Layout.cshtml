@using Microsoft.AspNetCore.Identity
@inject SignInManager<_2022_CS_668.Models.ApplicationUser> SignInManager
@inject UserManager<_2022_CS_668.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mess Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Authenticated Layout with Sidebar -->
        <div class="wrapper">
            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar">
                <div class="sidebar-header">
                    <h3><i class="fas fa-utensils"></i> Mess System</h3>
                </div>

                <ul class="list-unstyled components">
                    <li>
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-section">
                            <span>ADMINISTRATION</span>
                        </li>
                        <li>
                            <a asp-controller="Menu" asp-action="Index">
                                <i class="fas fa-clipboard-list"></i> Menu Management
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Attendance" asp-action="Mark">
                                <i class="fas fa-user-check"></i> Mark Attendance
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Bill" asp-action="Generate">
                                <i class="fas fa-file-invoice-dollar"></i> Generate Bills
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Admin" asp-action="BillApproval">
                                <i class="fas fa-check-circle"></i> Bill Approval
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Admin" asp-action="PaymentManagement">
                                <i class="fas fa-money-bill"></i> Payment Management
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Admin" asp-action="UserManagement">
                                <i class="fas fa-users"></i> User Management
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Student"))
                    {
                        <li class="nav-section">
                            <span>STUDENT</span>
                        </li>
                        <li>
                            <a asp-controller="Student" asp-action="SelectMessGroup">
                                <i class="fas fa-hand-pointer"></i> Select Mess Group
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Student" asp-action="DailyBill">
                                <i class="fas fa-receipt"></i> Daily Bill
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Student" asp-action="MonthlyBill">
                                <i class="fas fa-file-invoice"></i> Monthly Bill
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Student" asp-action="PaymentStatus">
                                <i class="fas fa-credit-card"></i> Payment Status
                            </a>
                        </li>
                    }

                    <li class="nav-section">
                        <span>ACCOUNT</span>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Profile">
                            <i class="fas fa-user"></i> My Profile
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="ChangePassword">
                            <i class="fas fa-key"></i> Change Password
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>

                <!-- Hidden Logout Form -->
                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display:none;">
                    @Html.AntiForgeryToken()
                </form>
            </nav>

            <!-- Page Content -->
            <div id="content">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-primary">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="ms-auto d-flex align-items-center">
                            <span class="navbar-text me-3">
                                <i class="fas fa-user-circle"></i> @User.Identity?.Name
                            </span>
                            <span class="badge bg-info">@(User.IsInRole("Admin") ? "Admin" : "Student")</span>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid mt-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Public Layout (Login/Register) -->
        <div class="public-layout">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <i class="fas fa-utensils"></i> Mess Management System
                    </a>
                    <div class="navbar-nav ms-auto">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                </div>
            </nav>

            <main role="main" class="py-4">
                @RenderBody()
            </main>

            <footer class="footer mt-auto py-3 bg-light">
                <div class="container text-center">
                    <span class="text-muted">&copy; 2026 - Mess Management System. All rights reserved.</span>
                </div>
            </footer>
        </div>
    }

    <!-- Load JS: prefer CDN then fallback to local files -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/lib/jquery/dist/jquery.min.js"><\/script>');</script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script>window.jQuery && !jQuery.validator && document.write('<script src="/lib/jquery-validation/dist/jquery.validate.js"><\/script>');</script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>window.jQuery && !jQuery.validator && document.write('<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"><\/script>');</script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Verify jQuery loaded
        if (typeof jQuery === 'undefined') {
            console.error('jQuery not loaded!');
        } else {
            console.log('jQuery loaded successfully:', jQuery.fn.jquery);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

