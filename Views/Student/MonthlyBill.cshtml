@model _2022_CS_668.ViewModels.BillViewModel

@{
    ViewData["Title"] = "Monthly Bill";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-file-invoice"></i> Monthly Bill</h2>
        <p class="text-muted">View your monthly mess bill</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="month" class="form-label">Month</label>
                <select name="month" id="month" class="form-select">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == (Model?.Month ?? DateTime.Today.Month))">
                            @(new DateTime(2000, i, 1).ToString("MMMM"))
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label for="year" class="form-label">Year</label>
                <select name="year" id="year" class="form-select">
                    @for (int i = DateTime.Today.Year - 1; i <= DateTime.Today.Year; i++)
                    {
                        <option value="@i" selected="@(i == (Model?.Year ?? DateTime.Today.Year))">@i</option>
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> View Bill
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-file-invoice-dollar"></i> Bill for @(new DateTime(2000, Model.Month, 1).ToString("MMMM")) @Model.Year</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="text-muted mb-1">Student Name</p>
                            <h5>@Model.FullName</h5>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted mb-1">Bill Status</p>
                            <h5>
                                @switch (Model.Status)
                                {
                                    case _2022_CS_668.Models.BillStatus.Pending:
                                        <span class="badge bg-secondary">Pending</span>
                                        break;
                                    case _2022_CS_668.Models.BillStatus.Generated:
                                        <span class="badge bg-info">Generated</span>
                                        break;
                                    case _2022_CS_668.Models.BillStatus.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case _2022_CS_668.Models.BillStatus.Paid:
                                        <span class="badge bg-primary">Paid</span>
                                        break;
                                    case _2022_CS_668.Models.BillStatus.Disputed:
                                        <span class="badge bg-warning">Disputed</span>
                                        break;
                                }
                            </h5>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><i class="fas fa-coffee"></i> Water & Tea Charges</td>
                                <td class="text-end">? @Model.WaterTeaAmount.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-utensils"></i> Food Charges</td>
                                <td class="text-end">? @Model.FoodAmount.ToString("N2")</td>
                            </tr>
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th>Total Amount</th>
                                <th class="text-end">? @Model.TotalAmount.ToString("N2")</th>
                            </tr>
                            <tr>
                                <td>Amount Paid</td>
                                <td class="text-end text-success">? @Model.TotalPaid.ToString("N2")</td>
                            </tr>
                            <tr class="table-info">
                                <th>Balance Due</th>
                                <th class="text-end @(Model.Balance > 0 ? "text-danger" : "text-success")">
                                    ? @Model.Balance.ToString("N2")
                                </th>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> Generated on @Model.GeneratedAt.ToString("dd MMM yyyy")
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calculator"></i> Bill Summary</h5>
                    <hr class="bg-white" />
                    <div class="d-flex justify-content-between mb-2">
                        <span>Food:</span>
                        <strong>? @Model.FoodAmount.ToString("N2")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Water & Tea:</span>
                        <strong>? @Model.WaterTeaAmount.ToString("N2")</strong>
                    </div>
                    <hr class="bg-white" />
                    <div class="d-flex justify-content-between">
                        <span><strong>Total:</strong></span>
                        <strong>? @Model.TotalAmount.ToString("N2")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
            <p class="text-muted">@ViewBag.Message</p>
        </div>
    </div>
}


