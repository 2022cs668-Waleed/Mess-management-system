@model _2022_CS_668.ViewModels.DailyBillViewModel

@{
    ViewData["Title"] = "Daily Bill";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-receipt"></i> Daily Bill</h2>
        <p class="text-muted">View your daily mess charges</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="date" class="form-label">Select Date</label>
                <input type="date" name="date" id="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> View Bill
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-calendar-day"></i> Bill for @Model.Date.ToString("dd MMMM yyyy")</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="text-muted mb-1">Attendance Status</p>
                                @if (Model.IsPresent)
                                {
                                    <h4 class="text-success"><i class="fas fa-check-circle"></i> Present</h4>
                                }
                                else
                                {
                                    <h4 class="text-danger"><i class="fas fa-times-circle"></i> Absent</h4>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="text-muted mb-1">Food Taken</p>
                                @if (Model.FoodTaken)
                                {
                                    <h4 class="text-success"><i class="fas fa-check-circle"></i> Yes</h4>
                                }
                                else
                                {
                                    <h4 class="text-secondary"><i class="fas fa-times-circle"></i> No</h4>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><i class="fas fa-coffee"></i> Water & Tea</td>
                            <td class="text-end">@Model.WaterTeaCharge.ToString("N2")</td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-utensils"></i> Food</td>
                            <td class="text-end">@Model.FoodCharge.ToString("N2")</td>
                        </tr>
                    </tbody>
                    <tfoot class="table-info">
                        <tr>
                            <th>Total</th>
                            <th class="text-end">@Model.TotalCharge.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-info-circle"></i> Daily Charges</h5>
                <hr class="bg-white" />
                <ul class="small mb-0">
                    <li class="mb-2">Water & Tea is charged every day</li>
                    <li class="mb-2">Food is charged only on present days</li>
                    <li class="mb-2">Charges are based on daily menu rates</li>
                </ul>
            </div>
        </div>
    </div>
</div>



