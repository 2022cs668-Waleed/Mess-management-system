@model _2022_CS_668.ViewModels.MenuDisplayViewModel

@{
    ViewData["Title"] = "View Menu";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-utensils"></i> Today's Menu</h2>
        <p class="text-muted">View available menu items and prices</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="date" class="form-label">Select Date</label>
                <input type="date" name="date" id="date" class="form-control" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> View Menu
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <!-- Mandatory Items (Water & Tea) -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-mug-hot"></i> Water & Tea (Mandatory)</h5>
            </div>
            <div class="card-body">
                @if (Model.MandatoryItems.Any())
                {
                    <div class="list-group">
                        @foreach (var item in Model.MandatoryItems)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@item.ItemName</h6>
                                    <small class="text-muted">@item.Category</small>
                                </div>
                                <span class="badge bg-primary rounded-pill fs-6">Rs @item.Price.ToString("N2")</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-coffee fa-3x mb-3"></i>
                        <p>No mandatory items available for this date</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Optional Items (Food) -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-hamburger"></i> Food Items (Optional)</h5>
            </div>
            <div class="card-body">
                @if (Model.OptionalItems.Any())
                {
                    <div class="list-group">
                        @foreach (var item in Model.OptionalItems)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@item.ItemName</h6>
                                    <small class="text-muted">@item.Category</small>
                                </div>
                                <span class="badge bg-success rounded-pill fs-6">Rs @item.Price.ToString("N2")</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-utensils fa-3x mb-3"></i>
                        <p>No food items available for this date</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
