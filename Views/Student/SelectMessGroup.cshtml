@model _2022_CS_668.ViewModels.UserMessGroupViewModel

@{
    ViewData["Title"] = "Select Mess Group";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-hand-pointer"></i> Select Mess Group</h2>
        <p class="text-muted">Choose which mess services you want to subscribe to</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="SelectMessGroup" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="UserId" />

                    @foreach (var group in Model.AvailableGroups)
                    {
                        <div class="card mb-3 @(Model.SelectedGroupIds.Contains(group.Id) ? "border-primary" : "")">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           name="SelectedGroupIds" 
                                           value="@group.Id" 
                                           id="group_@group.Id"
                                           @(Model.SelectedGroupIds.Contains(group.Id) ? "checked" : "")
                                           @(group.IsMandatory ? "disabled checked" : "") />
                                    <label class="form-check-label" for="group_@group.Id">
                                        <h5 class="mb-1">@group.Name @(group.IsMandatory ? "(Mandatory)" : "(Optional)")</h5>
                                        <p class="text-muted mb-0">@group.Description</p>
                                    </label>
                                </div>
                            </div>
                        </div>

                        @if (group.IsMandatory)
                        {
                            <input type="hidden" name="SelectedGroupIds" value="@group.Id" />
                        }
                    }

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Selection
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



