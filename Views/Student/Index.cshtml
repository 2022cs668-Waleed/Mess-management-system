@model _2022_CS_668.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-user-graduate"></i> Student Dashboard</h2>
        <p class="text-muted">Welcome to your mess management portal</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card stat-card primary">
            <div class="card-body">
                <h3>@Model.TotalUsers</h3>
                <p><i class="fas fa-file-invoice"></i> Total Bills</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card stat-card warning">
            <div class="card-body">
                <h3>@Model.PendingBills</h3>
                <p><i class="fas fa-clock"></i> Pending Payments</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card stat-card danger">
            <div class="card-body">
                <h3>@Model.UnpaidBills</h3>
                <p><i class="fas fa-exclamation-circle"></i> Unpaid Bills</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-tasks"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-action="ViewMenu" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-utensils fa-2x d-block mb-2"></i>
                            View Menu
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="DailyBill" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-receipt fa-2x d-block mb-2"></i>
                            Daily Bill
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="MonthlyBill" class="btn btn-warning btn-lg w-100">
                            <i class="fas fa-file-invoice fa-2x d-block mb-2"></i>
                            Monthly Bill
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="PaymentStatus" class="btn btn-info btn-lg w-100">
                            <i class="fas fa-credit-card fa-2x d-block mb-2"></i>
                            Payment Status
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



