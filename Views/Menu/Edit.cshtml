@model _2022_CS_668.ViewModels.MenuViewModel

@{
    ViewData["Title"] = "Edit Menu Item";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Edit Menu Item</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MessGroupId" class="form-label">Mess Group</label>
                            <select asp-for="MessGroupId" class="form-select">
                                <option value="">-- Select Mess Group --</option>
                                @foreach (var group in (IEnumerable<_2022_CS_668.Models.MessGroup>)ViewBag.MessGroups)
                                {
                                    <option value="@group.Id">@group.Name</option>
                                }
                            </select>
                            <span asp-validation-for="MessGroupId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ItemName" class="form-label">Item Name</label>
                            <input asp-for="ItemName" class="form-control" placeholder="e.g., Breakfast, Lunch" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Category</label>
                            <select asp-for="Category" class="form-select">
                                <option value="1">Food</option>
                                <option value="2">Water & Tea</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price (Rs)</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EffectiveDate" class="form-label">Effective Date</label>
                            <input asp-for="EffectiveDate" class="form-control" type="date" />
                            <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                            <small class="form-text text-muted">Menu item will be available from this date onwards</small>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fas fa-save"></i> Update Menu Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
