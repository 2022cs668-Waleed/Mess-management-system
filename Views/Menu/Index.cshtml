@model _2022_CS_668.ViewModels.MenuListViewModel

@{
    ViewData["Title"] = "Menu Management";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-clipboard-list"></i> Menu Management</h2>
        <p class="text-muted">Manage daily menu items and prices</p>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Menu Item
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Group</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Effective Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menu in Model.Menus)
                    {
                        <tr>
                            <td>@menu.ItemName</td>
                            <td>@menu.MessGroup.Name</td>
                            <td>
                                <span class="badge @(menu.Category == _2022_CS_668.Models.MenuCategory.Food ? "bg-primary" : "bg-info")">
                                    @menu.Category
                                </span>
                            </td>
                            <td>@menu.Price.ToString("N2")</td>
                            <td>@menu.EffectiveDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (menu.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@menu.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                @if (menu.IsActive)
                                {
                                    <form asp-action="Delete" asp-route-id="@menu.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to deactivate this menu item?')">
                                            <i class="fas fa-trash"></i> Deactivate
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


