@model List<_2022_CS_668.Models.Bill>

@{
    ViewData["Title"] = "Payment Management";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-money-bill"></i> Payment Management</h2>
        <p class="text-muted">Mark bills as paid and record payments</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Month/Year</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr>
                                <td>@bill.User.FullName</td>
                                <td>@(new DateTime(2000, bill.Month, 1).ToString("MMM")) @bill.Year</td>
                                <td><strong>@bill.TotalAmount.ToString("N2")</strong></td>
                                <td><span class="badge bg-success">Approved</span></td>
                                <td>
                                    <a asp-action="MarkPayment" asp-route-id="@bill.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-money-bill"></i> Mark Payment
                                    </a>
                                    <a asp-controller="Bill" asp-action="Details" asp-route-id="@bill.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-money-bill fa-3x text-muted mb-3"></i>
                <p class="text-muted">No approved bills pending payment</p>
            </div>
        }
    </div>
</div>



