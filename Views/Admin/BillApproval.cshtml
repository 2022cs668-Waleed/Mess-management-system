@model List<_2022_CS_668.Models.Bill>

@{
    ViewData["Title"] = "Bill Approval";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-check-circle"></i> Bill Approval</h2>
        <p class="text-muted">Review and approve generated bills</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="month" class="form-label">Month</label>
                <select name="month" id="month" class="form-select">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == ViewBag.Month)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="year" class="form-label">Year</label>
                <select name="year" id="year" class="form-select">
                    @for (int i = DateTime.Today.Year; i >= DateTime.Today.Year - 2; i--)
                    {
                        <option value="@i" selected="@(i == ViewBag.Year)">@i</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="alert alert-info">
                Showing bills for <strong>@ViewBag.MonthName @ViewBag.Year</strong>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Month/Year</th>
                            <th>Food Amount</th>
                            <th>Water/Tea Amount</th>
                            <th>Total Amount</th>
                            <th>Generated Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr>
                                <td>@bill.User.FullName</td>
                                <td>@(new DateTime(2000, bill.Month, 1).ToString("MMM")) @bill.Year</td>
                                <td>Rs @bill.FoodAmount.ToString("N2")</td>
                                <td>Rs @bill.WaterTeaAmount.ToString("N2")</td>
                                <td><strong>Rs @bill.TotalAmount.ToString("N2")</strong></td>
                                <td>@bill.GeneratedAt.ToString("dd MMM yyyy")</td>
                                <td>
                                    <form asp-action="ApproveBill" asp-route-id="@bill.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to approve this bill?')">
                                            <i class="fas fa-check"></i> Approve
                                        </button>
                                    </form>
                                    <a asp-controller="Bill" asp-action="Details" asp-route-id="@bill.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
                <p class="text-muted">No bills pending approval for @ViewBag.MonthName @ViewBag.Year</p>
                <p class="small text-muted">Try selecting a different month or generate bills first.</p>
            </div>
        }
    </div>
</div>



