@model List<_2022_CS_668.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-users-cog"></i> User Management</h2>
        <p class="text-muted">Manage system useand their roles</p>
    </div>
    <div class="col-auto">
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card primary">
            <div class="card-body">
                <h3>@Model.Count</h3>
                <p><i class="fas fa-users"></i> Total Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card success">
            <div class="card-body">
                <h3>@Model.Count(u => u.IsActive)</h3>
                <p><i class="fas fa-check-circle"></i> Active Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card warning">
            <div class="card-body">
                <h3>@Model.Count(u => !u.IsActive)</h3>
                <p><i class="fas fa-user-slash"></i> Inactive Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card info">
            <div class="card-body">
                <h3>@Model.Count(u => u.CreatedAt.Date == DateTime.Today)</h3>
                <p><i class="fas fa-user-plus"></i> New Today</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <h5 class="mb-0"><i class="fas fa-list"></i> All Users</h5>
            </div>
            <div class="col-auto">
                <input type="text" id="searchUsers" class="form-control form-control-sm" placeholder="Search users..." />
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="usersTable">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.OrderBy(u => u.FullName))
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-user-circle"></i> @user.FullName
                                </td>
                                <td>@user.Email</td>
                                <td>@(user.PhoneNumber ?? "N/A")</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <form asp-action="ToggleUserStatus" asp-route-userId="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            @if (user.IsActive)
                                            {
                                                <button type="submit" class="btn btn-warning" onclick="return confirm('Deactivate this user?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-success" onclick="return confirm('Activate this user?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                        </form>
                                        <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to permanently delete this user? This action cannot be undone!')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-usefa-3x text-muted mb-3"></i>
                <p class="text-muted">No usefound</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        $(document).ready(function () {
            $('#searchUsers').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#usersTable tbody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}



