@model _2022_CS_668.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>
        <p class="text-muted">Mess Management System Overview</p>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card stat-card info">
            <div class="card-body">
                <h3>@Model.TotalUsers</h3>
                <p><i class="fas fa-users"></i> Total Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card stat-card primary">
            <div class="card-body">
                <h3>@Model.TotalStudents</h3>
                <p><i class="fas fa-user-graduate"></i> Students</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card stat-card warning">
            <div class="card-body">
                <h3>@Model.ActiveMenuItems</h3>
                <p><i class="fas fa-clipboard-list"></i> Menu Items</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card stat-card success">
            <div class="card-body">
                <h3>@Model.TotalRevenue.ToString("N0")</h3>
                <p><i class="fas fa-money-bill-wave"></i> Total Revenue</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card stat-card danger">
            <div class="card-body">
                <h3>@Model.PendingBills</h3>
                <p><i class="fas fa-file-invoice"></i> Pending Bills</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card stat-card warning">
            <div class="card-body">
                <h3>@Model.UnpaidBills</h3>
                <p><i class="fas fa-exclamation-triangle"></i> Unpaid Bills</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card stat-card info">
            <div class="card-body">
                <h3>@Model.MonthlyRevenue.ToString("N0")</h3>
                <p><i class="fas fa-calendar-alt"></i> This Month</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-tasks"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-2">
                        <a asp-controller="Menu" asp-action="Index" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-clipboard-list fa-2x d-block mb-2"></i>
                            Menu
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-controller="Attendance" asp-action="Mark" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-user-check fa-2x d-block mb-2"></i>
                            Attendance
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-controller="Bill" asp-action="Generate" class="btn btn-warning btn-lg w-100">
                            <i class="fas fa-file-invoice-dollar fa-2x d-block mb-2"></i>
                            Generate Bills
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="BillApproval" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-check-circle fa-2x d-block mb-2"></i>
                            Approve Bills
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="PaymentManagement" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-money-bill fa-2x d-block mb-2"></i>
                            Payments
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="UserManagement" class="btn btn-info btn-lg w-100">
                            <i class="fas fa-users-cog fa-2x d-block mb-2"></i>
                            Use</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



