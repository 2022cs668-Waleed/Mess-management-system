@using Microsoft.AspNetCore.Identity
@inject UserManager<_2022_CS_668.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Profile";
    var user = await UserManager.GetUserAsync(User);
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="fas fa-user"></i> My Profile</h2>
        <p class="text-muted">View and manage your account information</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-id-card"></i> Profile Information</h5>
            </div>
            <div class="card-body">
                @if (user != null)
                {
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Full Name:</strong>
                        </div>
                        <div class="col-md-8">
                            @user.FullName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-8">
                            @user.Email
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Phone Number:</strong>
                        </div>
                        <div class="col-md-8">
                            @(user.PhoneNumber ?? "Not provided")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>User Role:</strong>
                        </div>
                        <div class="col-md-8">
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge bg-primary">Admin</span>
                            }
                            else if (User.IsInRole("Student"))
                            {
                                <span class="badge bg-success">Student</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Account Status:</strong>
                        </div>
                        <div class="col-md-8">
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Member Since:</strong>
                        </div>
                        <div class="col-md-8">
                            @user.CreatedAt.ToString("dd MMMM yyyy")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-info-circle"></i> Account Actions</h5>
                <hr />
                <div class="d-grid gap-2">
                    <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-secondary">
                        <i class="fas fa-key"></i> Change Password
                    </a>
                </div>
            </div>
        </div>

        <div class="card bg-info text-white mt-3">
            <div class="card-body">
                <h6 class="card-title"><i class="fas fa-shield-alt"></i> Security Tip</h6>
                <p class="small mb-0">Keep your password secure and change it regularly. Never share your credentials with anyone.</p>
            </div>
        </div>
    </div>
</div>


